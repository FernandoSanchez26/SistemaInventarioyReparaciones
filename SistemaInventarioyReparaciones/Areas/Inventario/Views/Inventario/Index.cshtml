﻿@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-6">
        <h2 class="text-primary">Stock de Productos</h2>
    </div>
    <div class="col-lg-6">
        <a class="btn btn-outline-primary" asp-action="NuevoInventario"><i class="bi bi-plus-circle-dotted"></i> Crear Nuevo Inventario </a>
        <a class="btn btn-outline-primary" asp-action="KardexProducto"> Reporte Stock por producto@* Kardex *@</a>
    </div>
</div>

<br />

<div class="p-4 border rounded bg-light">
    <table id="tblDatos" class="table table-responsive table-hover">
        <thead class="table-dark">
            <tr>
                <th>Bodega</th>
                <th>Producto</th>  
                <th>Activo / Serie</th>
                <th>Cantidad</th>                
            </tr>

        </thead>

    </table>
</div>

@section Scripts{
    <script src="~/js/inventario.js"></script>
}
